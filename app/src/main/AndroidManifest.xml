<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.imirror">
    <!-- 相機權限 -->
    <uses-permission android:name="android.permission.CAMERA" /> <!-- 讀寫權限 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Imirror"
        android:usesCleartextTraffic="true"
        tools:targetApi="m">
        <activity android:name=".ShoppingHomeActivity"></activity>
        <activity android:name=".makeupActivity.MakeupActivity" />
        <activity
            android:name=".videoActivity.OutgoingInvitationActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".videoActivity.IncomingInvitationActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".videoActivity.VideoList" />
        <activity
            android:name=".SignUpActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".SignInActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".faceActivity.MedicalReserveQuery" />
        <activity android:name=".faceActivity.MedicalReserve" />
        <activity android:name=".faceActivity.FaceReport" />
        <activity android:name=".cameraActivity.TakePicActivity" />
        <activity android:name=".faceActivity.FaceMenu" />
        <activity android:name=".MainActivity" /> <!-- 設定一個臨時權限 -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.cindy.imirror.CameraEx"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <service
            android:name=".firebase.MessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
    </application>

</manifest>