<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <!--背景-->
    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="230dp"
        android:scaleType="fitXY"
        android:src="@drawable/bgmain" />

    <ScrollView
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        android:scrollbars="none">

    <LinearLayout
        android:layout_gravity="top|center"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HEALTH"
            android:textStyle="bold"
            android:textSize="18dp"
            android:paddingTop="0dp"
            android:layout_marginTop="0dp"/>
        <!--面徵健檢鏡-->
        <ImageButton
            android:id="@+id/btn1_Face"
            android:layout_width="300dp"
            android:layout_height="150dp"
            android:background="@drawable/btn1"
            android:layout_marginTop="5dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FUNNY"
            android:textStyle="bold"
            android:textSize="18dp"
            android:layout_marginTop="20dp"/>
            <LinearLayout
                android:layout_gravity="top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                >
                <!--面相微算智能鏡-->
                <ImageButton
                    android:id="@+id/btn2_Detect"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:background="@drawable/btn2"
                    />
                <!--刷牙遊戲-->
                <ImageButton
                    android:id="@+id/btn3_Makeup"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:background="@drawable/btn3"
                    android:layout_marginLeft="20dp"/>
            </LinearLayout>
        <!--居家運動鏡-->
        <ImageButton
            android:id="@+id/btn4_"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:background="@drawable/btn4"
            android:layout_marginTop="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PRETTY"
            android:textStyle="bold"
            android:textSize="18dp"
            android:layout_marginTop="20dp"/>
        <LinearLayout
            android:layout_gravity="top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            >
            <!--美髮彩妝-->
            <ImageButton
                android:id="@+id/btn5"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:background="@drawable/btn5"/>
            <!--配件飾品-->
            <ImageButton
                android:id="@+id/btn6"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:background="@drawable/btn6"
                android:layout_marginLeft="20dp"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="其他"
            android:textStyle="bold"
            android:textSize="18dp"
            android:layout_marginTop="20dp"/>
        <LinearLayout
            android:layout_gravity="top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="20dp"
            >
            <!--雲端約會-->
            <ImageButton
                android:id="@+id/btn7"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:background="@drawable/btn7"
                />
            <!--電商導購-->
            <ImageButton
                android:id="@+id/btn8"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:background="@drawable/btn8"
                android:layout_marginLeft="20dp"/>

        </LinearLayout>


    </LinearLayout>
    </ScrollView>
</LinearLayout>